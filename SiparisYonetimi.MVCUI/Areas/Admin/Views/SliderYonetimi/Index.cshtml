@model IEnumerable<SiparisYonetimi.Entities.Slide>

@{
    ViewBag.Title = "Slide Listesi";
}

<h2>Slide Listesi</h2>

<p>
    @Html.ActionLink("Yeni Ekle", "Create")
</p>
<table class="table table-striped table-hover" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Link)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/Img/ @Html.DisplayFor(modelItem => item.Image)" alt="Resim Yok" height="50" />           
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Link)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }) |          
            @Html.ActionLink("Sil", "Delete", new {  id = item.Id })
        </td>
    </tr>
}

</table>
