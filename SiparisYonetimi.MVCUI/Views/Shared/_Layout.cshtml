<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Sipariş Uygulaması</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/">Anasayfa</a>
                        </li>

                        @Html.Action("PartialMenu", "Home")

                        <li class="nav-item">
                            <a class="nav-link active" href="/Home/Contact">İletişim</a>
                        </li>

                    </ul>
                    <div class="d-flex" role="search">
                        <form action="/Products/Search" method="get" class="input-group">
                            <input name="kelime" id="Text1" type="text" class="form-control me-2" required placeholder="Ürün Ara" />
                            <input id="Submit1" type="submit" value="Ara" class="btn btn-light" />
                        </form>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-3">
        @RenderBody()
    </main>

    <script src="/Scripts/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>